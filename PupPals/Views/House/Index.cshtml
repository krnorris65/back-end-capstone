@model IEnumerable<PupPals.Models.House>

@{
    ViewData["Title"] = "House List";
}

<h2>Houses on Map</h2>

<p>
    <a asp-action="Create">Add New House</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Address</th>
            <th> City</th>
            <th>State</th>
            <th>Zip Code</th>
            <th>My House</th>
            <th>Avoid</th>
            <th> Notes</th>
            <th>Owners </th>
            <th> Pets </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ZipCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsResidence)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Avoid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                @foreach (var owner in item.OwnerList)
                {

            @Html.DisplayFor(modelItem => owner.FirstName) <text> </text> @Html.DisplayFor(modelI => owner.LastName) <br />

                }
                @*<a asp-controller="Pet" asp-action="Create">Add Pet</a>*@
            </td>
            <td>
                @foreach (var pet in item.PetList)
                {
                    @if(pet.Name != null)
                    {
                        @Html.DisplayFor(modelItem => pet.Name) <text> (</text> @Html.DisplayFor(modelI => pet.Type) <text>)</text><br />
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => pet.Type) <br />

                    }


                 }
                <a asp-controller="Pet" asp-action="Create">Add Pet</a>
            </td>

            </tr>

        <tr>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>

}
    </tbody>
</table>
