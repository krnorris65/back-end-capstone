@model PupPals.Models.Owner

@{
    ViewData["Title"] = "Delete";
}


<h3>Are you sure you want to delete @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>Name </dt>
        <dd>
            @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        </dd>
        <dt>Address</dt>
        <dd>
            @Html.DisplayFor(model => model.House.Address) <br />
            @Html.DisplayFor(model => model.House.City), @Html.DisplayFor(model => model.House.State) @Html.DisplayFor(model => model.House.ZipCode)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-default" /> |
        <a asp-controller="House" asp-action="Details" asp-route-id="@Model.HouseId">Cancel</a>
    </form>
</div>
